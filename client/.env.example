# Next.js Client Environment Variables

# Strapi API Configuration
NEXT_PUBLIC_REST_API_KEY=your_strapi_api_key_here
NEXT_PUBLIC_REST_API_URL=http://localhost:1337/api

# Clerk Authentication
# Get your keys from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key
CLERK_SECRET_KEY=sk_test_your_secret_key
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# Stripe Payment
# Get your keys from: https://dashboard.stripe.com/test/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHER_KEY=pk_test_your_publishable_key
NEXT_PUBLIC_STRIPE_SECRET_KEY=sk_test_your_secret_key

# Resend Email Service (Optional)
# Get your key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key
